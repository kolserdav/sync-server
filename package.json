{
  "name": "synchronous-server",
  "version": "0.1.14",
  "main": "synchronous-server.js",
  "repository": "https://github.com/kolserdav/synchronous-server-node.git",
  "types": "types/synchronous-server.d.ts",
  "scripts": {
    "postinstall": "npm run build:release",
    "build:ts": "tsc -p jsconfig.json && npm run script:copy-dts",
    "build": "npm run build:release",
    "build:debug": "napi build && npm run build:ts",
    "build:release": "napi build --release",
    "dev": "nodemon ./examples/hello-world/index.js",
    "start": "node ./examples/hello-world/index.js",
    "test": "node ./test.js",
    "script:copy-dts": "node ./scripts/copy-dts.js",
    "build:aarch64-apple-darwin": "napi build --release --platform --target aarch64-apple-darwin",
    "build:aarch64-unknown-linux-gnu": "napi build --release --platform --target aarch64-unknown-linux-gnu",
    "build:aarch64-pc-windows-msvc": "napi build --release --platform --target aarch64-pc-windows-msvc",
    "build:x86_64-unknown-linux-gnu": "napi build --release --platform --target x86_64-unknown-linux-gnu",
    "build:x86_64-pc-windows-msvc": "napi build --release --platform --target x86_64-pc-windows-msvc",
    "build:x86_64-apple-darwin": "napi build --release --platform --target x86_64-apple-darwin"
  },
  "description": "Low level synchronous server",
  "keywords": [
    "http",
    "synchronous",
    "tcp"
  ],
  "author": "Sergey Kolmiller <uyem.ru@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "napi": {
    "name": "synchronous-server",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc",
        "x86_64-apple-darwin"
      ]
    }
  },
  "dependencies": {
    "@napi-rs/cli": "^2.17.0",
    "synchronous-server": "^0.1.3",
    "uuid": "^9.0.1"
  }
}